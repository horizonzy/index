<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tl.mapper.IndexMapper" >
  <resultMap id="BaseResultMap" type="com.tl.pojo.Index" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="company_name" property="company_name" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
      id,company_name
  </sql>

  <insert id="insert" parameterType="java.lang.String">
    insert into zy_index(company_name)VALUES(#{company_name,jdbcType=VARCHAR})
  </insert>


  <select id="search" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select
   id,company_name
    from zy_index
    where  company_name like CONCAT(#{company_name,jdbcType=VARCHAR},'%' ) limit 0,10
  </select>



  <select id="listAll" resultMap="BaseResultMap">
    select
    id,company_name
    from zy_index
  </select>


</mapper>